<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AlarmScreenActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/background_dark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameButtons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/background_dark"
            android:fadingEdge="none">

            <Button
                android:id="@+id/btnMain"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:text="Home" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:text="Set" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameL1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmOneFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:fadingEdge="none">

            <Switch
                android:id="@+id/switchA1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="end" />

            <TextView
                android:id="@+id/txtDaysA1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:text="every weekday"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:fadingEdge="none"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHoursA1"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="08"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/txtColonA1"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/txtMinsA1"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="35"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/txtAmPmA1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AM"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameL2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

