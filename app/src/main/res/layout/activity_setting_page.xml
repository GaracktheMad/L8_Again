<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingPage">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameButtons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/background_dark"
            android:fadingEdge="none">

            <Button
                android:id="@+id/btnAlarms"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:text="Alarms" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameL1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmOneFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:background="@android:color/background_dark"
            android:fadingEdge="none" />

        <FrameLayout
            android:id="@+id/frameL2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmTwoFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:background="@android:color/background_dark" />

        <FrameLayout
            android:id="@+id/frameL3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmThreeFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:background="@android:color/background_dark" />

        <FrameLayout
            android:id="@+id/frameL4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmFourFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:background="@android:color/background_dark" />

        <FrameLayout
            android:id="@+id/frameL5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

        <FrameLayout
            android:id="@+id/alarmFiveFrame"
            android:layout_width="match_parent"
            android:layout_height="127.6dp"
            android:background="@android:color/background_dark" />

        <FrameLayout
            android:id="@+id/frameL6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:fadingEdge="none"></FrameLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>