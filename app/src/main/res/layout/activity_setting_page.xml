<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/alarmOneFrame"
            android:layout_width="match_parent"
            android:layout_height="131dp">

            <Switch
                android:id="@+id/switchA1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/alarmTwoFrame"
            android:layout_width="match_parent"
            android:layout_height="129dp">

            <Switch
                android:id="@+id/switchA2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/alarmThreeFrame"
            android:layout_width="match_parent"
            android:layout_height="123dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/alarmFourFrame"
            android:layout_width="match_parent"
            android:layout_height="145dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/alarmFiveFrame"
            android:layout_width="match_parent"
            android:layout_height="170dp">

        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>